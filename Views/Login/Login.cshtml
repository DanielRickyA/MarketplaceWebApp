@model MarketWebApp.Models.Customer

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="~/css/output.css" />
</head>
<body>
    <img src="~/Images/bg-market.jpg" class="absolute h-dvh w-dvw" />
    <div class="h-dvh flex justify-center items-center mx-auto relative z-10 px-8">
        <div class="bg-white/80 p-0 w-full md:w-[70dvw] h-[70dvh] flex justify-center items-center rounded-xl shadow-lg">
            <div class="hidden h-full w-full md:flex md:flex-1">
                <img src="~/Images/img-market.jpg" class="w-full h-full object-cover rounded-s-xl" />
            </div>
            <div class="flex-1 flex flex-col justify-center items-center">
                <div class="py-auto my-auto w-full p-10 md:p-20">
                    <h1 class="font-bold text-3xl mb-8 text-center">Welcome to Our Market</h1>
                    <form asp-action="LoginAction" asp-controller="Login" method="post">
                        <div class="flex flex-col mb-2">
                            <label for="Email" class="font-semibold">Email</label>
                            <input type="text" asp-for="Email" placeholder="Enter your email" class="p-2 border rounded-lg" />
                            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                        </div>

                        <div class="flex flex-col mb-2">
                            <label for="Password" class="font-semibold">Password</label>
                            <input type="password" asp-for="Password" placeholder="Enter your password" class="p-2 border rounded-lg" />
                            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                        </div>

                        @if (TempData["FailedMessage"] != null)
                        {
                            <div class="text-red-500 text-center mb-4">
                                @TempData["FailedMessage"]
                            </div>
                        }

                        <button type="submit" class="bg-blue-500 text-white rounded-lg mt-6 p-2 w-full hover:bg-blue-600 transition-colors">
                            Login
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>


</body>
</html>